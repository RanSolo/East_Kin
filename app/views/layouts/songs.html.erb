<!DOCTYPE html>
<html>
<head>
  <title>East Kin's Universe</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta property="og:url"           content="http://www.eastkin.us" />
  <meta property="og:type"          content="Support saving for college" />
  <meta property="og:title"         content="East Kin's Universe" />
  <meta property="fb:app_id"        content="690984834394147" />
  <meta property="og:description"   content="A rock band from Nashville with a website that is informative and fun.  Detroy the universe of bring it new life.  Good guy or bad guy" />
  <meta property="og:image"         content="<%= image_url 'default_post_share.png' %>" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '690984834394147',
        xfbml      : true,
        version    : 'v2.8'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
    // 2. This code loads the IFrame Player API code asynchronously.
    var tag = document.createElement('script');

    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    // 3. This function creates an <iframe> (and YouTube player)
    //    after the API code downloads.
    var player;
    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {
        height: '100%',
        width: '100%',
        playerVars: {
                  autoplay: 1,
                  loop: 1,
                  playlist: '4j2SKxlGns4',
                  controls: 0,
                  showinfo: 0,
                  autohide: 1,
                  modestbranding: 0,
                  vq: 'hd1080'},
        videoId: 'V-mCuFYfJdI',
        events: {
          'onReady': onPlayerReady,
          'onStateChange': onPlayerStateChange
        }
      });
    }

    // 4. The API will call this function when the video player is ready.
    function onPlayerReady(event) {
      event.target.playVideo();
      player.mute();
    }

    var done = false;
    function onPlayerStateChange(event) {
      if (event.data === YT.PlayerState.ENDED)
            player.playVideo();
    }
    function stopVideo() {
      player.stopVideo();
    }
  </script>
  <nav class="navbar navbar-fixed-top" role="navigation">
    <div class="container-fluid fixed">
      <div class='row'>
          <ul class="nav navbar-nav">
            <li class='crest pull-left hidden-xs'>
              <%= link_to '.' %></li>
            <li class='navbar-link col-md-3 col-sm-3 col-xs-3 hidden-xs'>
              <%= link_to t(:band_name) +  t(:universe),
                ".", class: "navbar-brand" %>
            </li>
            <li>
              <ul class="header-txt list-unstyled">
                <li class='col-md-12'>
                  <div id='all-things' class='text-warning text-center'>
                    <%= t(:all_things)%>
                  </div>
                  <div id='tokyo' class='text-danger text-center'>
                    Oh No! There Goes Tokyo!
                  </div>
                  <div id='life' class='text-info text-center'>
                    New... Shiney... Speedy... Life...
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
<div class='container-fluid'>
  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-warning"><%= alert %></p>
  <% end %>

  <%= yield %>

  <%= render 'shared/modals', songs: @songs %>
</div>
</body>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</html>
