<!DOCTYPE html>
<html>
<head>
  <title>EastKin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-3">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse text-right" id="bs-example-navbar-collapse-3">
          <ul class="nav navbar-nav">
            <li class='crest'><%= link_to( '',welcomes_path, class: "navbar-brand") %></li>
            <li><%= link_to t(:band_name), welcomes_path, class: "navbar-brand" %></li>
            <li><%= link_to t(:music_controls), '#', type: "button", data: {toggle: "modal", target: "#musicModal"}, class: 'btn-link' %></li>
            <li><%= link_to t(:video), '#', type: "button", data: {toggle: "modal", target: "#videoModal"}, class: 'btn-link' %></li>
            <li><%= link_to t(:biography), '#', type: "button", data: {toggle: "modal", target: "#bioModal"}, class: 'btn-link' %></li>
            <li><%= link_to t(:restart_universe), '#', type: "button", class: 'btn-link', id: 'restart-universe' %></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-warning"><%= alert %></p>
  <% end %>
  <%= yield %>
  <!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="bioModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Bio</h4>
      </div>
      <div class="modal-body">
        <p><%= t(:bio) %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<div id="musicModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t(:music) %></h4>
      </div>
      <div class="modal-body">
        <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/191082685&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
      </div>
      <div class="modal-footer">

      </div>
    </div>

  </div>
</div>
<div id="videoModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t(:video) %></h4>
      </div>
      <div class="modal-body">
        <div class="embed-responsive embed-responsive-16by9">
                <iframe width="560" height="315" class="embed-responsive-item" src="https://www.youtube.com/embed/4dMQDPCZxy8" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Hide</button>
      </div>
    </div>

  </div>
</div>
</body>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</html>
