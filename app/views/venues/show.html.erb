<%- model_class = Venue -%>
  <%= link_to edit_venue_path(@venue), :class => 'btn btn-warning btn-xs pull-right', :"data-no-turbolink" => 'true', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
    <%= glyph 'pencil' %>
  <% end %>
  <%= link_to venue_path(@venue), :class => 'btn btn-danger btn-xs pull-right', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }", :method => 'delete', :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?'))} do %>
    <%= glyph 'trash' %>
  <% end %>
<div class="page-header">
  <h1 class='text-center'><%=t '.title', :default => model_class.model_name.human.titleize %>
    <%= link_to venues_path, :class => 'btn btn-default btn-xs pull-left', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
      <%= glyph 'arrow-left' %>
    <% end %>
  </h1>
  <h1 class="text-center transparent-light prettyprint"><%= @venue.name + " - " + @venue.location%></h1>



<div class='row header transparent-light'>
  <p>
  <%= " - " + @venue.location + " - "%>
    <%= @venue.about %>
    <div class='clear-fix'></div>
    </p>
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <% if @venue.link2? %>
        <%= link_to 'Website',@venue.link2 , target: 'none', class:'btn btn-info' %>
      <% end %>
    </div>
    <div class='embed-responsive embed-responsive-16by9'><%= content_tag(:iframe, '', class: 'embed-responsive-item', src: @venue.link, width: 560, height: 315, frameborder: 0) %></div>
  </div>
</div>
