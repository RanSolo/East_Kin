<%- model_class = Event %>
<%= link_to '#', :id => 'admin', :class => 'btn btn-primary btn-xs pull-right' do %>
  <%= glyph :wrench %>
<% end %>
<%= link_to send("new_event_path"), :class => 'btn btn-xs btn-success pull-right', :id => 'new', :"data-no-turbolink" => 'true' do %>
  <%= glyph :plus %>
<% end %>
<h1 class='text-center transparent-light'>Night Owl Calendar</h1>
<table class="table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:venue) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:link2) %></th>
      <th><%= model_class.human_attribute_name(:link3) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>

        <tr>
          <td><%=l event.start_time, format: :short if event.start_time? %></td>
          <td><%= event.venue.name %></td>
          <td><%= event.title %></td>
          <% if event.description %>
            <td>Present</td>
          <% else %>
            <td>Not Present</td>
          <% end %>
          <td><%= link_to event.link, 'link' , class: 'text-warning'%></td>
          <td><%= link_to event.link2, 'link2', class: 'text-warning'%></td>
          <td><%= link_to event.link3, 'link3' , class: 'text-warning'%></td>
          <td>
            <%= link_to event_path(event), :class => 'btn btn-xs btn-primary', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }", :"data-no-turbolink" => true do %>
              <%= glyph 'info-sign' %>
            <%- end -%>
            <%= link_to edit_event_path(event), :class => 'btn btn-xs btn-warning', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
              <%= glyph 'pencil' %>
            <%- end -%>
            <%= link_to event_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
              <%= glyph 'remove' %>
            <%- end -%>
          </td>
        </tr>

    <% end %>
  </tbody>
</table>
<div class='col-md-12' id='calendar'></div>
