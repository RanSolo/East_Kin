<%= form_for @song, :html => { :class => "form-horizontal song" } do |f| %>

  <% if @song.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lyric, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :lyric, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lyric) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :writers, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :writers, :class => 'form-control' %>
    </div>
    <%=f.error_span(:writers) %>
  </div>
  <div class="form-group">
    <%= f.label :copyright, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :copyright, :class => 'form-control' %>
    </div>
    <%=f.error_span(:copyright) %>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :active, :class => 'form-control' %>
    </div>
    <%=f.error_span(:active) %>
  </div>
  <div class="form-group">
    <%= f.label :youtube, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :youtube, :class => 'form-control' %>
    </div>
    <%=f.error_span(:youtube) %>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :facebook, :class => 'form-control' %>
    </div>
    <%=f.error_span(:facebook) %>
  </div>
  <div class="form-group">
    <%= f.label :soundcloud, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :soundcloud, :class => 'form-control' %>
    </div>
    <%=f.error_span(:soundcloud) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
