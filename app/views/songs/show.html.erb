<%- model_class = Song -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %> <%= model_class.human_attribute_name(:song) %>: <%= @song.title %></h1>
  <h5><strong><%= model_class.human_attribute_name(:writers) %>:</strong></dt>
  <%= @song.writers %> <strong><%= model_class.human_attribute_name(:copyright) %>:</strong>
  <%= @song.copyright %></h5>
</div>

<a href="<%= "'http://www.facebook.com/sharer/sharer.php?u=http://www.eastkin.us/songs/#{@song.id.to_s}'"%>" target="popup" onclick="window.open(<%= "'http://www.facebook.com/sharer/sharer.php?u=http://www.eastkin.us/songs/#{@song.id.to_s}'"%>,'popup','width=600,height=600'); return false;">Share</a>
<dl class="dl-horizontal">
  <% if @song.youtube? %>
    <strong><%= model_class.human_attribute_name(:youtube) %>:
    <dd><div class="embed-responsive embed-responsive-16by9"><iframe width="100%" height="100%" src="<%= @song&.youtube.gsub('watch?v=','embed/').html_safe %>" frameborder="0" allowfullscreen></iframe></div></dd>
  <% end %>
  <% if @song.facebook? %>
    <strong><%= model_class.human_attribute_name(:facebook) %>:</strong>
    <dd><%= @song.facebook %></dd>
  <% end %>
  <% if @song.soundcloud? %>
  <strong><%= model_class.human_attribute_name(:soundcloud) %>:</strong>
  <dd><%= @song.soundcloud %></dd>
  <% end %>
  <strong><%= model_class.human_attribute_name(:lyric) %>:</strong>
  <dd><%= @song.lyric.html_safe %></dd>
</dl>
