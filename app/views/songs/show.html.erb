<%= content_for :head do %>
  <meta property="og:url" content="http://www.eastkin.us/songs" />
  <meta property="og:title" content="EastKin'sUniverse" />
  <meta property="fb:app_id" content="690984834394147" />
  <meta property="og:description" content="A rock band from Nashville with a
      website that is informative and fun.  Detroy the universe of bring it new
      life. Good guy or bad guy" />
  <meta property="og:image" content="<%= image_url 'default_post_share.png' %>" />
<% end %>
<%- model_class = Song -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %> <%= model_class.human_attribute_name(:song) %>: <%= @song.title %></h1>
  <h5><strong><%= model_class.human_attribute_name(:writers) %>:</strong></dt>
  <%= @song.writers %> <strong><%= model_class.human_attribute_name(:copyright) %>:</strong>
  <%= @song.copyright %></h5>
</div>
<div class="fb-share-button" data-href="http://www.eastkin.us/songs/1" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.eastkin.us%2Fsongs%2F1&amp;src=sdkpreparse">Share</a></div>

<dl class="dl-horizontal">
  <% if @song.youtube? %>
    <strong><%= model_class.human_attribute_name(:youtube) %>:

    <dd><div class="embed-responsive embed-responsive-16by9"><%= @song&.youtube.html_safe %></div></dd>

  <% end %>
  <% if @song.facebook? %>
    <strong><%= model_class.human_attribute_name(:facebook) %>:</strong>
    <dd><%= @song.facebook %></dd>
  <% end %>
  <% if @song.soundcloud? %>
  <strong><%= model_class.human_attribute_name(:soundcloud) %>:</strong>
  <dd><%= @song.soundcloud %></dd>
  <% end %>
  <strong><%= model_class.human_attribute_name(:lyric) %>:</strong>
  <dd><%= @song.lyric.html_safe %></dd>
</dl>
