<%- model_class = Welcome -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bandName) %>:</strong></dt>
  <dd><%= @welcome.bandName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:headline) %>:</strong></dt>
  <dd><%= @welcome.headline %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @welcome.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo) %>:</strong></dt>
  <dd><%= @welcome.logo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              welcomes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_welcome_path(@welcome), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              welcome_path(@welcome),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
