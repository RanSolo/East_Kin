<!-- Modal -->

<%= modal_dialog id: "bioModal",
         header: { show_close: true, dismiss: 'modal', title: t(:biography) },
         body:   { content: t(:bio_html) },
         footer: { content: '' } %>
<%= modal_dialog id: "musicModal",
         header: { show_close: true, dismiss: 'modal', title: t(:music) },
         body:   { content: '<iframe width="100%" height="545" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/245155799&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>'.html_safe },
         footer: { content: '' } %>
<%= modal_dialog id: "liveModal",
         header: { show_close: true, dismiss: 'modal', title: t(:live) },
         body:   { content: "<p class='text-center'>You don't know East Kin until you've seen them live. Coming soon to a bar near you... if you live in Nashville.</p>".html_safe },
         footer: { content: '' } %>
<%= modal_dialog id: "videoModal",
         header: { show_close: true, dismiss: 'modal', title: t(:video) },
         body:   { content: '
          <div class="embed-responsive embed-responsive-16by9">
            <iframe width="560" height="315" class="embed-responsive-item" src="https://www.youtube.com/embed/Dt6hSgKSE9k" frameborder="0" allowfullscreen></iframe>
          </div>
            '.html_safe },
         footer: { content: '' } %>
<%= modal_dialog id: "funModal",
         header: { show_close: true, dismiss: 'modal', title: t(:synth_controls) },
         body:   { content: '
            <div id="synth-widget"></div>
          '.html_safe + t(:synth_explaination_html) },
         footer: {content: '' } %>
<%= modal_dialog id: "drawModal",
         header: { show_close: true, dismiss: 'modal', title: t(:draw) },
         body:   { content: "
           <div id='drawing-widget''></div>
          ".html_safe },
         footer: {content: t(:draw_explaination_html) } %>

<div id="lyrics" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t(:Lyrics) %></h4>
      </div>
      <div class="modal-body">
        <h4 class="modal-title"><%= t(:Album) %></h4>
        <%= link_to t(:fresman_effort), '#', type: "button", data: {toggle: "modal", target: "#freshman"}, class: 'btn-link' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

